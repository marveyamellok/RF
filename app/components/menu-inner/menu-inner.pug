mixin menu-inner()
  .menu-inner
    .menu-inner__wrapper
      .menu-inner__button-close
      ul.menu-inner__list
        .menu-inner__items

        .menu-inner__buttons
          script(id="entry-template_buttons" type="text/x-handlebars-template")
            .button.button_dark
              a(href="https://online.raiffeisen.ru/").button__text(data-trnslt="ROnline") {{{ROnline}}}
            .button.button_small
              a(href="r-dealer.html").button__text(data-trnslt="RDealer") {{{RDealer}}}

      .menu-inner__download
        script(id="entry-template_download" type="text/x-handlebars-template")
          .menu-inner__download-button
            a(href="#").link_button
              .menu-inner__download-button-img
              .menu-inner__download-button-text(data-trnslt="footer_fwr") {{{footer_copyright}}}
          p
            .menu-inner__footer(data-trnslt="footer_copyright") {{{footer_fwr}}}
            a(href='https://www.raiffeisen.ru' target='_blank' class='menu-inner__footer-link') www.raiffeisen.ru

  block


mixin _menu-inner(current_city, content )
  .menu-inner(data-city=current_city)
    .menu-inner__wrapper
      .menu-inner__button-close
      ul.menu-inner__list
        //- +pug-list(content.list, "menu-inner__item")
        .menu-inner__buttons
          //- +links-button(data.links-button)
      .menu-inner__download
        .menu-inner__download-button
          a(href="#").link_button
            .menu-inner__download-button-img
            .menu-inner__download-button-text Скачать «Услуги FWR»
        p.menu-inner__footer(data-trnslt="footer_link") &copy;&nbsp;2009-2017&nbsp;АО &laquo;Райффайзенбанк&raquo; <br>
          a(href='https://www.raiffeisen.ru' target='_blank' class='menu-inner__footer-link') www.raiffeisen.ru



